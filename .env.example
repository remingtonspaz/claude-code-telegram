# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram user ID (send /start to your bot to get this)
TELEGRAM_USER_ID=your_user_id_here

# WebSocket port for Claude Code communication
WEBSOCKET_PORT=8080

# Console Output Forwarding (enabled by default)
ENABLE_CONSOLE_FORWARDING=true
CONSOLE_BUFFER_TIME=3000
CONSOLE_MAX_LENGTH=3800

# Image Support (enabled by default) 
ENABLE_IMAGE_SUPPORT=true

# Project identification (will appear in all messages)
PROJECT_NAME=Claude Code
BOT_NAME=Claude Code Assistant

# Security settings (auto-generated by setup)
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_PER_MINUTE=30